{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "break-timer",
  "version": "0.1.0",
  "identifier": "com.palmipetursson.break-timer",
  "build": {
    "beforeDevCommand": "npm run dev -- --port 1430 --strictPort",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "break-timer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
